@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    if(Model.Count().Equals(0))
    {
        <h3>Currently There are no movies in the list</h3>
    }

    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movies</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var items in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(items.MovieName.ToString(),"Details","Movies",new { id = items.MovieId},null)</td>
                        <td>@items.Genre.GenreName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

